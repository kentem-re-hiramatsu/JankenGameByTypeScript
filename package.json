{
    "jest": {
      "moduleFileExtensions": [
        "ts",
        "js"
      ],
      "transform": {
        "^.+\\.ts$": "ts-jest"
      },
      "globals": {
        "ts-jest": {
          "tsconfig": "tsconfig.json"
        }
      },
      "testMatch": [
        "**/Scripts/Test/**/*.test.ts"
      ],
      "resolver": "jest-ts-webcompat-resolver"
    },
    "scripts": {
      "test": "jest"
    },
    "devDependencies": {
      "@types/jest": "^27.4.0",
      "jest": "^27.5.1",
      "jest-ts-webcompat-resolver": "^1.0.0",
      "ts-jest": "^27.1.3",
      "typescript": "^4.5.5"
    }
  }
  